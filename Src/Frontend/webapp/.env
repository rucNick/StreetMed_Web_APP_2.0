# Local Development Configuration with TLS Support
# Primary HTTPS endpoint
REACT_APP_BASE_URL=http://localhost:8080
REACT_APP_SECURE_BASE_URL=https://localhost:8443
REACT_APP_BASE_URL_HTTP=http://localhost:8080

# Secondary HTTP endpoint (for non-secure operations in dev)
REACT_APP_BASE_URL_HTTP=http://localhost:8080

# Authentication and TLS settings
REACT_APP_USE_AUTH=true
REACT_APP_USE_LOCAL_AUTH=true
REACT_APP_USE_TLS=true
REACT_APP_ALLOW_SELF_SIGNED_CERT=true

# Environment flag
REACT_APP_ENVIRONMENT=development
NODE_ENV=development

# Development specific settings
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_LOGGING=true
REACT_APP_LOG_LEVEL=debug

# CORS and security settings
REACT_APP_WITH_CREDENTIALS=true

# Timeout settings (in milliseconds)
REACT_APP_REQUEST_TIMEOUT=30000

# Certificate acceptance URL
REACT_APP_CERT_CHECK_URL=https://localhost:8443/api/test/tls/cert-test

DANGEROUSLY_DISABLE_HOST_CHECK=true