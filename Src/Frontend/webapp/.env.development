# Local Development Configuration with TLS Support
# Primary HTTPS endpoint
VITE_BASE_URL=http://localhost:8080
VITE_SECURE_BASE_URL=https://localhost:8443
VITE_BASE_URL_HTTP=http://localhost:8080

# Authentication and TLS settings
VITE_USE_AUTH=true
VITE_USE_LOCAL_AUTH=true
VITE_USE_TLS=true
VITE_ALLOW_SELF_SIGNED_CERT=true

# Environment flag
VITE_ENVIRONMENT=development

# Development specific settings
VITE_DEBUG_MODE=true
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL=debug

# CORS and security settings
VITE_WITH_CREDENTIALS=true

# Timeout settings (in milliseconds)
VITE_REQUEST_TIMEOUT=30000

# Certificate acceptance URL
VITE_CERT_CHECK_URL=https://localhost:8443/api/test/tls/cert-test
